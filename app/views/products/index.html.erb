<% content_for :title, "Products" %>

<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Products</h1>
    <%= link_to "New product", new_product_path, class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white block font-medium" %>
  </div>

  <div id="products" class="min-w-full">
    <% if @products.any? %>
      <div class="grid grid-cols-3 gap-8">
         <% @products.each do |product| %>
        <div class="shadow-xl rounded-lg p-5">
           <%= render product %>
           <p>
             <%= link_to "Show this product", product, class: "rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
             <%= link_to "Delete", product, data:{turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "rounded-md px-3.5 py-2.5 bg-red-700 text-white hover:bg-red-500 inline-block font-medium" %>
           </p>
        </div>
         <% end %>
      </div>
    <% else %>
      <p class="text-center my-10">No products found.</p>
    <% end %>
  </div>
</div>
